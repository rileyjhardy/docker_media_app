<p id="notice"><%= notice %></p>

<h1>Messages</h1>
<br/>
<%= link_to 'New Message', new_message_path, class: "btn btn-primary" %>
<br />
<br />
 
    <div class = 'row'>
      <div class = 'col-md-auto center'><h2>#</h2></div>
      <div class = 'col-md-2'><h2></h2></div>
      <div class = 'col-md-2'><h2>Title</h2></div>
      <div class = 'col-md-3'><h2>Description</h2></div>
      <div class = 'col-md-2'><h2>Tag</h2></div>
      <div class = 'col-md-2 center'><h2>Actions</h2></div>   
    </div>
    <hr />
 
  <% @messages.each_with_index do |message, i | %>
  
    <div class = 'row'>
      <div class = 'col-md-auto center'>
        <span class = 'vert-align'><%= i + 1 %></span>
      </div>
      <div class = 'col-md-2'>
        
      <% if message.thumbnail_url.present? %>
        <a href = <%= message.url %>><img class = 'img-fluid' height = '90' width = '160' src = <%= message.thumbnail_url %>></img></a>
      <% else %>
        <p>No thumbnail provided</p>
        <% end %>
      </div>
      
      <div class = 'col-md-2 '>
        <p><%= message.title %></p>
      </div>
      <div class = 'col-md-3'>
        <p><%= message.description %></p>
      </div>
      <div class = 'col-md-2'>
        <p><%= message.tag %></p>
      </div>
      <div class = 'col-md-2 center'>
        <div class = "btn-group"><%= link_to 'Edit', edit_message_path(message), class: "btn btn-primary" %>
        <%= link_to 'Delete', message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></div>
      </div>      
      
    </div>
    <hr />
    <% end %>
    
  </div>
</div>
